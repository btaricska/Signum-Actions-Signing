name: Sign Files via SignServer REST
on:
  workflow_dispatch:
    inputs:
      endpoint:
        description: "SignServer endpoint (optional override)"
        required: false
        type: string
  push:
    branches:
      - main

permissions:
  contents: read

jobs:
  sign:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      # If an endpoint was provided via workflow_dispatch input, set it in GITHUB_ENV
      - name: Set endpoint from workflow input
        if: ${{ github.event.inputs.endpoint != '' }}
        run: echo "SIGNSERVER_ENDPOINT=${{ github.event.inputs.endpoint }}" >> $GITHUB_ENV

      # If no workflow input, fall back to the repository secret (and fail if missing)
      - name: Set endpoint from secret (fallback)
        if: ${{ github.event.inputs.endpoint == '' }}
        run: |
          if [ -z "${{ secrets.SIGNSERVER_ENDPOINT || '' }}" ]; then
            echo "❌ SIGNSERVER_ENDPOINT not provided via workflow input or repo secret."
            exit 1
          fi
          echo "SIGNSERVER_ENDPOINT=${{ secrets.SIGNSERVER_ENDPOINT }}" >> $GITHUB_ENV

      - name: Validate endpoint exists (debug)
        run: |
          echo "SIGNSERVER_ENDPOINT=${SIGNSERVER_ENDPOINT}"
          if [ -z "${SIGNSERVER_ENDPOINT:-}" ]; then
            echo "SIGNSERVER_ENDPOINT is empty — aborting"
            exit 1
          fi

      - name: Ensure filestosign exists (with sample)
        run: |
          mkdir -p filestosign
          if [ -z "$(ls -A filestosign 2>/dev/null)" ]; then
            echo "Hello SignServer" > filestosign/hello.txt
          fi

      - name: Run signing script (PowerShell)
        shell: pwsh
        env:
          FILES_DIR: filestosign
          SIGNSERVER_ENDPOINT: ${{ env.SIGNSERVER_ENDPOINT }}
        run: |
          pwsh -NoLogo -NoProfile -ExecutionPolicy Bypass ./scripts/sign-via-signserver.ps1
      - name: Upload signatures
        uses: actions/upload-artifact@v4
        with:
          name: signatures
          path: filestosign/*.sig
